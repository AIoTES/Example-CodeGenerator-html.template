#set( $ontName = $ontology.getOntologyID().getOntologyIRI().get().getFragment() )


#macro(internalClass)
#foreach($o in $ontology.getClassesInSignature())
    
        <tr>
            <td><a href="./classes/${o.getIRI().getFragment()}/${o.getIRI().getFragment()}.html">${o.getIRI().getFragment()}</a><br></td>
            <td>$esc.getText("${o.getIRI()}")</td>
        </tr>

#end
#end


#macro(individuals)
#foreach($axiom in $ontology.getAxioms($AxiomType.DIFFERENT_INDIVIDUALS))

#foreach($aux in $axiom)
$aux
        <tr>
        <td>${aux.getIRI().getFragment()}</td>
        <td>$esc.getText("${aux.getIRI()}")</td>
        <td>$ontology.getOntologyID().getOntologyIRI().get().getFragment()</td>
        </tr>
#end

#end
#end


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>CodeGenerator tool Tutorial</title>
    <link rel="stylesheet" type="text/css" href="./css/style.css">
    <style>
            table, th, td {
              border: 1px solid black;
              border-collapse: collapse;
            }
            th, td {
              padding: 5px;
              text-align: left;    
            }
    </style>
</head>
<body>

    <h1>${ontology.getOntologyID().getOntologyIRI().get().getFragment()}</h1>
    <h2>List of class for this ontology</h2>
    <p>The following list details all the classes contained in the current ontology. By clicking on the name of the class, you can see all the elements related to the class.</p>
    <table>
        <tr>
            <th>ClassName</th>
            <th>ClasIRI</th>
        </tr>
    #internalClass()
    </table>

    <h2>List of NamedIndividuals for this ontology</h2>

    <table>
        <tr>
            <th>individual</th>
            <th>individual IRI</th>
        </tr>
    #individuals()
    </table>
    
